    <AbsoluteLayout BackgroundColor="#000"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
        
        <Image x:Name="imgTeam" 
               Source="team_logo_w.svg"
               WidthRequest="200"
               HeightRequest="200"
               Opacity="0"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               AbsoluteLayout.LayoutBounds="0.5, 0.45, Autosize, Autosize"></Image>
        
        <Image x:Name="imgMhyst"
               Source="mhyst_w.svg"
               WidthRequest="150"
               HeightRequest="150"
               Opacity="0"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               AbsoluteLayout.LayoutBounds="0.5, 0.4, Autosize, Autosize">
        </Image>

        <Label x:Name="lbMhyst"
               Text="MHYST"
               TextColor="#ffffff"
               FontSize="18"
               FontFamily="MontserratAlternatesMedium"
               Opacity="0"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               AbsoluteLayout.LayoutBounds="0.5, 0.53, Autosize, Autosize"></Label>

        <Button x:Name="btnLogin"
                Text="Iniciar SesiÃ³n"
                FontFamily="LexendMedium"
                FontSize="16"
                TextTransform="Uppercase"
                TextColor="#000"
                BackgroundColor="#fff"
                WidthRequest="180"
                Opacity="0"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="0.5, 0.7, Autosize, Autosize"
                Clicked="goToLoginPage"></Button>

        <Button x:Name="btnSignUp" 
                Text="Registrarse"
                FontFamily="LexendMedium"
                FontSize="16"
                TextTransform="Uppercase"
                TextColor="#000"
                BackgroundColor="#fff"
                WidthRequest="180"
                Opacity="0"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="0.5, 0.78, Autosize, Autosize"
                Clicked="goToSignUpPage"></Button>
    </AbsoluteLayout>
</ContentPage>