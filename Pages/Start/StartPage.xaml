<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:alohakit="clr-namespace:AlohaKit.Animations;assembly=AlohaKit.Animations"
             x:Class="ProjectMHYST.Pages.Start.StartPage"
             Title="StartPage"
             NavigationPage.HasNavigationBar="False"
             Appearing="triggerStartAnimations">

    <!--
    <ContentPage.Resources>
        <alohakit:FadeToAnimation x:Key="imgMhyst_FadeToAnimation"
                                  Target="{x:Reference imgMhyst}"
                                  Duration="2000"
                                  Opacity="1" />

        <alohakit:FadeToAnimation x:Key="lbMhyst_FadeToAnimation"
